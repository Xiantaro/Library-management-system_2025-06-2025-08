@if (User.Identity != null && User.Identity.IsAuthenticated)
{
	Layout = "~/Areas/Frontend/Views/Shared/_Layout/_LoginAfter.cshtml";
}
else
{
	Layout = "~/Areas/Frontend/Views/Shared/_Layout/_LoginBefore.cshtml";
}

@await Html.PartialAsync("~/Areas/Frontend/Views/Shared/_Partial/_modal.cshtml")

<main>
	<div class="login-card">
		<h3>會員登入</h3>
		<form>
			<div class="mb-4">
				<label for="username" class="form-label">帳號</label>
				<input type="text" class="form-control" id="username" placeholder="請輸入您的帳號" required>
			</div>
			<div class="mb-5">
				<label for="password" class="form-label">密碼</label>
				<input type="password" class="form-control" id="password" placeholder="請輸入您的密碼" required>
			</div>
			<div class="d-grid mb-3">
				<button type="submit" class="btn btn-success">登入</button>
			</div>
		</form>
		<div class="d-grid mb-3">
			<form asp-area="Frontend" asp-controller="Account" asp-action="ExternalLogin" method="post">
				<input type="hidden" name="provider" value="Google" />
				<button type="submit" class="btn btn-google w-100">
					<i class="fab fa-google me-2"></i> 使用 Google 登入
				</button>
			</form>
		</div>
		<div class="d-grid mb-3">
			<form asp-area="Frontend" asp-controller="Account" asp-action="ExternalLogin" method="post">
				<input type="hidden" name="provider" value="Facebook" />
				<button type="submit" class="btn btn-facebook w-100">
					<i class="fab fa-facebook-f me-2"></i> 使用 Facebook 登入
				</button>
			</form>
		</div>
		<div class="d-flex justify-content-center">
			<span class="me-2">還沒有帳號嗎？</span>
			<span class="register-pipe">|</span>
			<a class="ms-2" href="/Frontend/home/register" style="color: #5cb85c; font-weight: bold;">立即註冊</a>
		</div>
	</div>
</main>

<section id="tree-section">
	@await Html.PartialAsync("~/Areas/Frontend/Views/Shared/_Partial/_tree.cshtml")
</section>